<%- include('partials/header', { title: 'Lista de Usuários' }) %>

<div class="container mt-5">
  <h1 class="form-title">Lista de Usuários</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
            <form action="/users/<%= user.id %>?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>